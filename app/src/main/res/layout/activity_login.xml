<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#3788A2"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/back"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:background="#3788A2"
        android:layout_gravity="start"
        android:layout_marginTop="28dp"
        android:layout_marginStart="10dp"
        android:contentDescription="@string/sign_up"
        android:src="@drawable/back" />

    <TextView
        android:id="@+id/signUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome Back!"
        android:fontFamily="sans-serif-medium"

        android:textSize="36sp"
        android:layout_marginTop="24dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/workable"
        android:textColor="#000226"
        android:layout_marginStart="26dp"
        android:textFontWeight="600"
        tools:targetApi="p" />

    <ImageView
        android:id="@+id/workable"
        android:layout_width="206dp"
        android:layout_below="@id/back"
        android:layout_height="83dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/workable" />


    <EditText
        android:id="@+id/email"
        android:layout_width="365dp"
        android:layout_height="wrap_content"
        android:hint="@string/enter_your_email"
        android:fontFamily="sans-serif-medium"
        android:layout_below="@+id/signUp"
        android:inputType="textEmailAddress"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:background="@drawable/login"
        android:paddingStart="18dp" />

    <EditText
        android:id="@+id/password"
        android:layout_width="365dp"
        android:layout_height="wrap_content"
        android:hint="@string/enter_your_password"
        android:layout_below="@+id/email"
        android:layout_centerHorizontal="true"
        android:inputType="textPassword"
        android:fontFamily="sans-serif-medium"
        android:layout_marginTop="16dp"
        android:background="@drawable/login"
        android:paddingStart="18dp" />

    <TextView
        android:id="@+id/forgotpassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Forgot Password?"
        android:paddingEnd="32dp"
        android:gravity="end"
        android:layout_below="@+id/password"
        android:textColor="#FFFFFF"
        android:fontFamily="sans-serif-medium"
        android:textFontWeight="300"
        android:textSize="18sp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/signupButton"
        android:layout_width="365dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/password"
        android:layout_marginTop="69dp"
        android:layout_centerHorizontal="true"
        android:text="@string/login"
        android:textColor="#FFFFFF"
        android:background="@drawable/signup"
        android:textSize="20sp"
        android:textAllCaps="false" />

    <TextView
        android:id="@+id/or"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/orline"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:fontFamily="sans-serif-medium"
        android:textFontWeight="600"
        android:textSize="20sp"
        android:layout_marginTop="48dp"
        android:layout_below="@+id/signupButton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        tools:ignore="UnusedAttribute" />

    <Button
        android:id="@+id/google"
        android:layout_width="365dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/or"
        android:layout_marginTop="12dp"
        android:layout_centerHorizontal="true"
        android:text="@string/login_with_google"
        android:textSize="20sp"
        android:textColor="#584646"
        android:fontFamily="sans-serif-medium"
        android:background="@drawable/google"
        android:textAllCaps="false" />

    <TextView
        android:id="@+id/textViewSignUpPrompt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Don't have an account? Sign Up"
        android:gravity="center"
        android:layout_below="@+id/google"
        android:textColor="#FFFFFF"
        android:fontFamily="sans-serif-medium"
        android:textFontWeight="400"
        android:textSize="22sp"
        android:layout_marginTop="64dp"
        android:layout_marginBottom="16dp" />

</RelativeLayout>